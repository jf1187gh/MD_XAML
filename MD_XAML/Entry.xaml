<Window x:Class="MD_XAML.Entry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MD_XAML"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        mc:Ignorable="d"
        Title="Test Main Window" Height="500" Width="800" Background="#f1f1f1" WindowStartupLocation="CenterScreen" FontFamily="Aptos" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width=".5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width=".5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height=".25*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Grid.Column="1" Grid.Row="1" Content="Open 2nd Window" Height="42" Foreground="White" Background="#3e6db6" FontFamily="Apos" FontSize="14" HorizontalAlignment="Center" VerticalAlignment="Center" Click="openButton_Click" Style="{DynamicResource MaterialDesignRaisedDarkButton}" />
    </Grid>
</Window>
